<?xml version="1.0" encoding="utf-8"?>

<!-- the root view must be the DrawerLayout -->

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/gradient_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/failureMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Failure Message"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"/>
        <LinearLayout
            android:id="@+id/infoSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/avatarProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/avatarField"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
        </LinearLayout>
            <TextView
                android:id="@+id/rankField"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="(Newbie)"
                android:textColor="#dacd0f" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:width="115dp"
                    android:text="Profile"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/profileField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:layout_marginLeft="1dp"
                    android:text="divansh99"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:width="115dp"
                    android:text="Organisation"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/orgField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="1dp"
                    android:text="divansh99"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="115dp"
                    android:layout_height="match_parent"

                    android:text="Contest Rating"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/ratingField"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:text="divansh99"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Contribution"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"

                    android:text=":"/>

                <TextView
                    android:id="@+id/contributionField"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:text="divansh99"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Friend of"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"

                    android:text=":"/>
                <TextView
                    android:id="@+id/friendsField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="1dp"
                    android:text="divansh99"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Last Online"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text=":"/>
                <TextView
                    android:id="@+id/lastOnlineField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="1dp"
                    android:text="divansh99"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Registered"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text=":"/>
                <TextView
                    android:id="@+id/registeredField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="1dp"
                    android:text="divansh99"/>
            </LinearLayout>

        </LinearLayout>

<!--        <com.github.mikephil.charting.charts.BarChart-->
<!--            android:id="@+id/ratingChart"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="658dp"-->
<!--            android:layout_alignParentStart="true"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            />-->
<!--        <com.github.mikephil.charting.charts.LineChart-->
<!--            android:id="@+id/ratingChart"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="658dp" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="italic"
            android:textColor="@color/green"
            android:text="Rating Graph"
            android:textSize="25sp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/ratingChart"
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:layout_marginTop="5dp"
            android:background="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:textColor="@color/green"
            android:text="Recent Submissions"
            android:textSize="25sp"/>
        <ListView
            android:id="@+id/submissionList"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

        </LinearLayout>
    </ScrollView>

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_menu_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>