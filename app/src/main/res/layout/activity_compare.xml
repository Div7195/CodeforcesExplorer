<?xml version="1.0" encoding="utf-8"?>

<!-- the root view must be the DrawerLayout -->

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout_compare"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/gradient_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/firstImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        />
                    <ImageView
                        android:id="@+id/secondImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="40dp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="14sp"
                        android:textColor="#dacd0f"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/firstProfileField"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="Profile"
                        />
                    <TextView
                        android:id="@+id/secondProfileField"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:textSize="14sp"
                        android:textColor="#dacd0f"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/firstRatingField"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="Profile"
                        />
                    <TextView
                        android:id="@+id/secondRatingField"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Rank"
                        android:textSize="14sp"
                        android:textColor="#dacd0f"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/firstRankField"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="Profile"
                        />
                    <TextView
                        android:id="@+id/secondRankField"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="MaxRating"
                        android:textSize="14sp"
                        android:textColor="#dacd0f"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/firstMaxRatingField"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="Profile"
                        />

                    <TextView
                        android:id="@+id/secondMaxRatingField"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="MaxRank"
                        android:textSize="14sp"
                        android:textColor="#dacd0f"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/firstMaxRankField"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="Profile"
                        />
                    <TextView
                        android:id="@+id/secondMaxRankField"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating History"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/green"
                    android:textSize="25sp"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/combinedRatingChart"
                    android:layout_width="match_parent"
                    android:layout_height="258dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contests Appeared"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/green"
                    android:textSize="25sp"/>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/contestBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="258dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Problems Solved"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/green"
                    android:textSize="25sp"/>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/problemBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="258dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_menu_compare"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>